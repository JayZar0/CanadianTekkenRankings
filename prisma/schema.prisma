datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_CONNECTION_WORK")
}

generator client {
  provider        = "prisma-client-js"
  output          = "./"
  previewFeatures = ["driverAdapters"]
}

// This is the player model that will represent the player
model Player {
  id          String  @id @default(cuid())
  startggid   String  @unique
  gamertag    String
  main        String
  province    String
  wins        Int
  games       Int
  averageRank Decimal
  winRate     Decimal
}

model Tournament {
  id Int @id @default(autoincrement())
}
